<div class="container my-3 row row-cols-1 row-cols-md-2 g-4">
  <div class="col">
    <img class="img-fluid" src="{{activity.imageUrl}}" />
  </div>
  <div class="col">
    <h1>{{activity.title}}</h1>
    <p><strong>{{activity.price}}€</strong></p>
    <h3>{{activity.location}}/{{activity.date}}</h3>
    <p class="fw-bold mt-5">Sobre esta actividad</p>
    <p>{{activity.description}}</p>
            <div id="map"></div>
</br>
    <center><a class="btn-primary" href="/activities">Ver más actividades</a></center>
    </br>
    {{>comments entity=activity type="activity"}}

  </div>

</div>
<script>
    let map = L.map('map').setView([{{activity.latitud}}, {{activity.longitud}}], 13);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    const marker = L.marker([{{activity.latitud}}, {{activity.longitud}}]).addTo(map);
</script>