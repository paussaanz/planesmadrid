<div class="container my-5">
<h1> EVENTOS</h1>

  <p><strong>¿Qué tipo de eventos te interesan?</strong></p>

  <div class="filter-bar">
    <form action="/events" method="post" class="filter-form">
      <div class="filter-options">
        {{#each categories}}
        <label class="custom-label">
          <input type="checkbox" class="checkbox" name="category" value="{{name}}" {{#if isChecked}}checked{{/if}}> {{name}}
        </label>
        {{/each}}
      </div>
      <div class="filter-buttons">
        <button type="submit" class="btn btn-success">Filtrar</button>
        <button type="button" class="btn btn-dark" onclick="resetFilters()">Quitar filtros</button>
      </div>
    </form>
  </div>

  <div class="row g-4">
    {{#each events}}
    {{#compare @index '<' 1}} <div class="col-md-12">
      {{> eventCard this}}
  </div>
  {{/compare}}

  {{#compare @index '>' 1}}
  {{#compare @index '<=' 7}} <div class="col-md-4">
    {{> eventCard this}}
</div>
{{/compare}}
{{/compare}}

  {{#compare @index '>' 6}}
  {{#compare @index '<=' 8}} <div class="col-md-6">
    {{> eventCard this}}
</div>
{{/compare}}
{{/compare}}


{{/each}}
{{#each events}}
 <div class="col-md-3">

  {{> eventCard this}}
  </div>
 
  {{/each}}
  </div>
  </div>