<div class="container my-3 row row-cols-1 row-cols-md-2 g-4">
  <div class="col">
    <img class="img-fluid" src="{{actividad.imageUrl}}" />
  </div>
  <div class="col">
    <h2>{{actividad.title}}</h2>
    <p class="text-danger fs-2 fw-bold">{{actividad.price}}€</p>
    <p class="text-danger fs-2 fw-bold">{{actividad.location}}€</p>
    <p class="text-danger fs-2 fw-bold">{{actividad.date}}€</p>
    <p class="fw-bold mt-5">Sobre esta actividad</p>
    <p>{{actividad.description}}</p>
            <div id="map"></div>

    <a class="btn btn-primary" href="/actividades">Ver más actividades</a>
  </div>

</div>
<script>
    let map = L.map('map').setView([{{actividad.latitud}}, {{actividad.longitud}}], 13);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    const marker = L.marker([{{actividad.latitud}}, {{actividad.longitud}}]).addTo(map);
</script>