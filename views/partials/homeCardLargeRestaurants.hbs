<div class="home-post">
  <div class="card image-holder-large text-white">
    <a href="/restaurants/{{this._id}}">
      <img src="{{imageUrl}}" class="card-img image-zoom" alt="...">
    </a>
    <div class="text-container">
      <div class="img-overlay">
        <a class="text-link category" href="restaurants/{{this._id}}">{{#if category}} {{category}} {{else}}
          Restaurantes {{/if}}</a>
        <a class="text-link" href="restaurants/{{this._id}}">
          <h2>{{title}} {{#if name}} {{name}} {{/if}}</h2>
          <h3 class="text-link"> {{#if cuisine}} {{cuisine}} {{/if}}</h3>
          <p class="home-post">{{#if date}} Fecha: {{date}} {{/if}}</p>
          <p class="home-post">{{#if rating}} Valoraci√≥n: {{rating}} {{/if}}</p>
          <p class="home-post">{{#if price}} Precio: {{price}} {{/if}}</p>
        </a>
      </div>
    </div>
  </div>
</div>